<p id="notice"><%= notice %></p>


<h1>Droughts Are Us</h1>

<table>
  <thead>
   <th>Our Mission</th>
    <p>We'd like to present drought information in an easy to understand way.<p>
    <tr>
      <th>State name</th>
      <th>State abbreviation</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @states.each do |state| %>
      <tr>
        <td><%= state.state_name %></td>
        <td><%= state.state_abbreviation %></td>
        <td><%= state.user %></td>
        <td><%= link_to 'Show', state %></td>
        <td><%= link_to 'Edit', edit_state_path(state) %></td>
        <td><%= link_to 'Destroy', state, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
 <% if user_signed_in? == false %>
   <%= render 'devise/sessions/form' %>
 <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New State', new_state_path %>
