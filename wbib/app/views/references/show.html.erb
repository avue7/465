<center>

<h1>Reference Page For Topic: <q> <%= " " + @reference.topic %> </q> </h1> 

<style>
table, th, td {
    border: 1px solid black;
    border-collapse: collapse;
}
th, td {
    padding: 5px;
}
</style>
<table align="center"style="width:80%">
  <thead>
    <tr>
      <th>Topic:</th>
      <th>Annotation:</th>
      <th>URL:</th>
      <th colspan="2"> Options: </th>
    </tr>
  </thead>

  <tbody>
      <tr>  
        <td><%= @reference.topic %></td>
        <td><%= @reference.annotation %></td>
        <td><a href="<%= @reference.URL %>" target="_blank"><%= @reference.URL %></a></td> 
        <td><%= link_to 'Edit', edit_reference_path(@reference) %></td>
        <td><%= link_to 'Delete', @reference, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
  </tbody>
</table>
<br>
<%= link_to 'Show all topics', references_path %>
</center>
